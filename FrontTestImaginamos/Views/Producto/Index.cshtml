@model IEnumerable<FrontTestImaginamos.BackWebServices.ProductoEntity>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de productos</h2>

<p>
    @Html.ActionLink("Nuevo producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Producto
        </th>
        <th>
            Precio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NombreProducto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio)
    </td>
    <td>
        @Html.ActionLink("Agregar al carrito", "Edit", new { id = item.Id })
    </td>
</tr>
}

</table>
